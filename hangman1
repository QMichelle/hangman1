        if (l == leter) {
          blanks = blanks.substring(0, count) + letter +
                  blanks.substring((count+1),blanks.length);
        }
          count = count + 1;
    }
        // update the blanks
        $("#word").html(blanks);

        // check if we've won
        if (! blanks.includes "-")) {
            finished = true;
            $("#messages").text("You Won!");
          }



            });

        });

    </script>
